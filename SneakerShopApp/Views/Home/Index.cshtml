@{
    ViewData["Title"] = "Home Page";
}

   

   
        <header class="hero">
            <div class="container spacing">
                <h1 class="primary-title">Welcome to SneakerShop!</h1>
                <p>
                     Here you can find amazing shoes at an amazing price
                </p>
                <a class="btn" asp-controller="Shop" asp-action="Index">Take a look</a>
            </div>
        </header>

        <main>

            <section class="featured">
                <div class="container">
                    <h2 class="section-title">Featured products</h2>
                    <div class="split">
                        <a asp-controller="Shop" asp-action="Index" class="featured__item">
                            <img src="~/img/shoe-4.png" alt="" class="featured__img">
                            <p class="featured__details"><span class="price">1350 Ron</span>Air Jordan 12 Bulls Gym</p>
                        </a>
                        <a asp-controller="Shop" asp-action="Index" class="featured__item">
                            <img src="~/img/shoe-5.png" alt="" class="featured__img">
                            <p class="featured__details"><span class="price">800 Ron</span>Adidas Ultraboost</p>
                        </a>
                        <a asp-controller="Shop" asp-action="Index" class="featured__item">
                            <img src="~/img/shoe-6.png" alt="" class="featured__img">
                            <p class="featured__details"><span class="price">8200 Ron</span>Jordan 1 UNC x OFFWHITE</p>
                        </a>
                    </div>
                </div>
            </section>


            <section class="our-products">
                <div class="container">
                    <h2 class="section-title">Our products</h2>

                    <article  class="product shoe-red spacing">
                        <img src="~/img/shoe-1.png" alt="" class="product__image">
                        <h3 class="product__title">NEW IN MARKET</h3>
                        <p class="product__description">
                            Check our latest products!
                        </p>
                        <a asp-controller="Shop" asp-action="Index" class="btn">Buy now</a>
                    </article>

                    <article class="product shoe-white shoe-left spacing">
                        <img src="~/img/shoe-2.png" alt="" class="product__image">
                        <h3 class="product__title">LOT OF BRANDS</h3>
                        <p class="product__description">
                            Like adidas, Nike, Puma, Y-3 and more!
                        </p>
                        <a asp-controller="Shop" asp-action="Index"class="btn">Buy now</a>
                    </article>

                    <article class="product shoe-blue spacing">
                        <img src="~/img/shoe-3.png" alt="" class="product__image">
                        <h3 class="product__title">HAND-PICKED FOR YOU</h3>
                        <p class="product__description">
                            With more new sneakers upcoming!
                        </p>
                        <a asp-controller="Shop" asp-action="Index"class="btn">Buy now</a>
                    </article>

                </div>
            </section>

        </main>


