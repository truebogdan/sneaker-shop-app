@model CartModel;
@{
    ViewData["Title"] = "Cart";
}
<div class="text-center">
    <h1 class="display-4">Cart</h1>
    <div class="row">
        <div class="col-md-6">

   @foreach (var product in Model.CartProducts)
            {
                <div class="card w-100 row">
                <div class="row">
                    <div class="col-md-3">

                        <img src="@product.ImgUrl" width=150>


                    </div>
                    <div class="col-md-7">
                        <div class="card-body col-md-6">
                            <h5 class="card-title">@product.Brand</h5>
                            <p class="card-text">@product.Description</p>
                            
                        </div>

                    </div>  
                    <div class="col-md-2">
                          <p class="card-text">$@product.Price</p>
                    </div>

                </div>


              
                   
                </div>
            }
            </div>
            <div class="col-md-6">
             @if(@Model.CartProducts.Count() > 0)
             {
                         <h3>Total cost: $@Model.Total</h3>
                           <form  method="post" asp-action="CheckoutCart" asp-controller="Shop">
                                <input  name="customer" type="text" value="@Model.CartProducts.First().Customer" hidden/>
                                <button type="submit" class="btn btn-danger">Check Out</button>
                </form>
            }
            else
            {
                <h3>This cart is empty</h3>
            }

                   
            </div>
    </div>
     


    

</div>