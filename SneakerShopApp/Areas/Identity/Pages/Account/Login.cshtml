@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

}


<div class="row">
	<div class="col-md-4">
		<section>
			<h1>@ViewData["Title"]</h1>
			<form id="account" method="post" class="form">
				<hr />
				<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
				<div class="form-group">
					<label asp-for="Input.Email">Email</label>
					<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Input.Password">Password</label>
					<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" type="password" />
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="form-group form-check">
					<input asp-for="Input.RememberMe" class="form-check-input" />
					<label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
				</div>
				<div class="form-group">
					<button id="login-submit" type="submit" class="btn btn-primary btn-block">Log in</button>
				</div>

			</form>
			<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
				<div class="form-group">
					<h3>Or log in with:</h3>
					<div class="provider-wraper">
						@foreach (var provider in Model.ExternalLogins)
						{
							<button type="submit" class="btn btn-primary register-provider m-1" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
						}
					</div>
				</div>
			</form>
		</section>
	</div>
	<div class="col-md-6 col-md-offset-2">
		<img src="https://www.epantofi.ro/media/catalog/product/cache/image/650x650/0/0/0000209599220_02_rz_1.jpg" class="img-fluid" alt="Responsive image">
	</div>
</div>

</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}